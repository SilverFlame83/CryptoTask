<section id="create-container">
    <div class="create-container-info">
        <h1>Create Announcement</h1>
        <h4>Post your coins to sell</h4>
        <form action="/crypto/create" method="POST">
            <label>Name:</label>
            <input type="text" id="name" name="name" value="{{cryptoData.name}}" placeholder="Bitcoin">
            <label>Image:</label>
            <input type="text" id="image" name="imageUrl" value="{{cryptoData.imageUrl}}" placeholder="http://...">
            <label>Price:</label>
            <input type="number" id="price" name="price" value="{{cryptoData.price}}" placeholder="31,166.71">
            <label>Description:</label>
            <textarea id="description" name="description" value="{{cryptoData.description}}" placeholder="Introduce your coins..."></textarea>
            <label>Payment method:</label>
            <select id="payment" name="payment">
                <option value="crypto-wallet">Crypto Wallet</option>
                <option value="credit-card">Credit Card</option>
                <option value="debit-card">Debit Card</option>
                <option value="paypal">PayPal</option>
            </select>
            <input type="submit" id="btn" value="TRADE"></input>
        </form>
    </div>
</section>
